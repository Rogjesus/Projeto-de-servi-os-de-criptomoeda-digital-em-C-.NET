@model CryptoCurrencyServicesMVC.Models.CryptoTbl
    
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<center style="background-color:black">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    @using (Html.BeginForm("Info", "Home", FormMethod.Post))
    {
        <table style="width: 448px; height: 440px; background-color:darkorange; font-size: large; font-weight: bold;">
            <th colspan="2" align="center"><h1>Crypto </h1></th>

            <tr>
                <td align="center">Crypto Id</td>
                <td align="center">
                    <a>@Html.TextBoxFor(m => m.cryptoId)</a>
                </td>
            </tr>
            <tr>
                <td align="center"> Full Name</td>
                <td align="center">
                    <a>@Html.TextBoxFor(m => m.fullName)</a>
                </td>
            </tr>


            <tr>
                <td align="center">gander</td>
                <td align="center">
                    <a>@Html.TextBoxFor(m => m.gander_)</a>
                </td>
            </tr>


            <tr>
                <td align="center">Purchace Crypto QTY</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.Crypto)
                </td>
            </tr>

            <tr>
                <td align="center">Description</td>
                <td align="center">
                    @Html.TextAreaFor(m => m.description)
                </td>
            </tr>

        



            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit" name="submit" class="btn btnOrder" />
                </td>
            </tr>
        </table>
    }

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</center>

